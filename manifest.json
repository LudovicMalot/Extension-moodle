{
	"manifest_version": 3,
	"name": "Extension Moodle CGD",
	"version": "2.1",
	"permissions": ["storage", "activeTab"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "./popup/popup.html",
		"default_icon": "logo.png"
	},
	"commands": {
		"toggle-select": {
			"suggested_key": {
				"default": "Ctrl+K",
				"mac": "Command+K"
			},
			"description": "Toggle select tool"
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["scripts/content.js"]
		}
	]
}
